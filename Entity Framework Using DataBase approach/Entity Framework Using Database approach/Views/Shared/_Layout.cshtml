<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Entity_Framework_Using_DataBase_approach</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Entity_Framework_Using_DataBase_approach.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-light p-2 border-bottom">
        <div class="container d-flex justify-content-between align-items-center">

            <!-- Left side: Title + Navigation -->
            <div class="d-flex align-items-center gap-4">
                <h5 class="mb-0">Product Management</h5>

                <nav>
                    <a asp-controller="Category"
                       asp-action="Index"
                       class="me-3 text-decoration-none fw-semibold">
                        Categories
                    </a>

                    <a asp-controller="Product"
                       asp-action="Index"
                       class="text-decoration-none fw-semibold">
                        Products
                    </a>
                </nav>
            </div>

            <!-- Right side: User info / logout -->
            @await Html.PartialAsync("_UserInfo")
        </div>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
